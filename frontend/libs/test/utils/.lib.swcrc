{
  "jsc": {
    "target": "es2017",
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true,
      "jsx": true
    },
    "transform": {
      "decoratorMetadata": true,
      "legacyDecorator": true
    },
    "keepClassNames": true,
    "externalHelpers": true,
    "loose": true
  },
  "module": {
    "type": "commonjs",
    "strict": true,
    "noInterop": false
  },
  "sourceMaps": true,
  "exclude": [
    "./src/**/.*.spec.ts$",
    "./**/.*.spec.ts$",
    "./src/**/jest-setup.ts$",
    "./**/jest-setup.ts$",
    "./**/.*.js$"
  ]
}
